@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<p>@Html.ValidationMessageFor(model => model.LicenseDate, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    <br>
    @Html.LabelFor(model => model.IsIdle) 
    @Html.CheckBoxFor(model => model.IsIdle)
    <br>
    <br>
    @Html.LabelFor(model => model.LicenseDate)
    @Html.TextBoxFor(model => model.LicenseDate, new { type = "date" })
    <br>
    <br>
    <input type="submit" value="Add new engineer" class="btn btn-primary" />
}

<br>
<p>@Html.ActionLink("Show all engineers", "Index")</p>