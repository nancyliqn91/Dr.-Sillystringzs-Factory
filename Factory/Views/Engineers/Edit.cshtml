@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit</h2>

<h4>Edit this engineer: @Html.DisplayFor(model => model.Name)</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.IsIdle) 
    @Html.CheckBoxFor(model => model.IsIdle)

    @Html.LabelFor(model => model.LicenseDate)
    @Html.TextBoxFor(model => model.LicenseDate, new { type = "date" })

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>