@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Type): @Html.DisplayFor(model => model.Type) | @Html.DisplayNameFor(model => model.Status): @Html.DisplayFor(model => model.Status)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This machine does not have any engineers assigned yet.</p>
}
else
{
  <h4>Engineers the machine has been assigned:</h4>
  <ul>
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <li>@join.Engineer.Name | Idle: @join.Engineer.IsIdle</li>

    @using (Html.BeginForm("DeleteJoin", "Machines"))
    {
      @Html.Hidden("joinId", @join.EngineerMachineId)
      <input type="submit" value="Delete"/>
    }
    
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>

<p>@Html.ActionLink("Add a Engineer", "AddEngineer", new { id = Model.MachineId })</p>

<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>

<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>